extends ../shared/template

block content
  if !user
    .row
      .small-6.columns
        form(action='/register', method='post')
          fieldset
            legend Register
            .row
              .small-12.columns
                label Email
                input(name='email', type='email')
            .row
              .small-12.columns
                label Password
                input(name='password', type='password')
            .row
              .small-6.columns
                button.tiny.radius Register

      .small-6.columns
        form(action='/login', method='post')
          fieldset
            legend Login
            .row
              .small-12.columns
                label Email
                input(name='email', type='email', autofocus=true)
            .row
              .small-12.columns
                label Password
                input(name='password', type='password')
            .row
              .small-6.columns
                button.tiny.radius Login
  .row
    .small-12.columns
      #items-list
        h1 Item List


